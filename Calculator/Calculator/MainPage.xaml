<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <StackLayout>
        <Frame BackgroundColor="Blue" Padding="24" CornerRadius="0">
            <Label Text="Funciones Matematicas" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Entry x:Name="num1"
               Placeholder="Numero 1"
               Keyboard="Numeric">
            
        </Entry>
        <Entry x:Name="num2"
               Placeholder="Numero 2"
               Keyboard="Numeric">

        </Entry>

        <Button Text="SUMA" x:Name="btnadition" Clicked="btnagregar_Clicked"></Button>
        <Button Text="RESTA" x:Name="btnsubstraction" Clicked="btnsubstraction_Clicked"></Button>
        <Button Text="MULTIPLICACION" x:Name="btnmultiplication" Clicked="btnmultiplication_Clicked"></Button>
        <Button Text="DIVICION" x:Name="btndivision" Clicked="btndivision_Clicked"></Button>
    </StackLayout>

</ContentPage>
