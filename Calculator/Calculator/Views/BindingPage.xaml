<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Views.BindingPage">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Blue" Padding="24" CornerRadius="0">
            <Label Text="Agenda Xamarin" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Nonbre"></Label>
            <Entry x:Name="txtnombre"></Entry>

            <Label Text="Apellidos"></Label>
            <Entry x:Name="txtapellido"></Entry>

            <Label Text="Edad"></Label>
            <Entry x:Name="txtedad" Keyboard="Numeric"></Entry>

            <Label Text="Correo Electronico"></Label>
            <Entry x:Name="txtcorreo" Keyboard="Email"></Entry>

            <Button x:Name="btnbinding" Text="Enviar Informacion" Clicked="btnbinding_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>